{
  "id": "download-thuuz",
  "run": {
    "cpus": 0.1,
    "mem": 128,
    "disk": 0,
    "args": ["/deploy-scheduled-jobs/scheduled-job-driver.sh","download-thuuz"],
    "docker": {
      "image": "registry.marathon.l4lb.thisdcos.directory:5000/sc-job-scheduler:latest"
    },
    "maxLaunchDelay": 3600,
    "restart": {
      "activeDeadlineSeconds": 1200,
      "policy": "ON_FAILURE"
    },
    "user": "root"
  },
  "schedules": [
    {
      "id": "default",
      "enabled": true,
      "cron": "0 */3 * * *",
      "timezone": "UTC",
      "concurrencyPolicy": "ALLOW",
      "startingDeadlineSeconds": 60
    }
  ],
  "description": "Downloads games meta from Thuuz"
}